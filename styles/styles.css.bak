body {
	/*global page property style*/
	font-family: georgian;
	background-color: rgb(220,220,220);
	overflow:scroll;
}
	
.foreground{
	/*may be unneccessary. using for general stuff*/
	background-color: rgb(245,245,245);
	padding-top: 16px;
	padding-left: 32px;
	padding-right: 32px;
	padding-bottom: 8px;
}

.conj_table{
	/*verb conjugation table style*/
	font-family: calibri, arial;
	text-align:center;
	border: solid;
	border-width:.5px;
	min-width:160px;
	width:500px;
	margin:0 auto;
	padding-top:8px;
	padding-bottom:8px;
}

.table_text{/*text below verb conjugation table style*/
	min-width:160px;
	width:500px;
	margin:0 auto;
	padding-top:8px;
	padding-bottom:8px;
}
	
.header{/*the part at the top that has various home links*/
	background-color: #b3b1b1;
	text-align:center;
	padding-top:16px;
	padding-bottom: 16px;
}

.section_header{/*sort of title for the section you are in*/
}

.texty{/*for areas with lots of text. might be extraneous*/
	width:85%;
	margin: 0 auto;
	padding-top:8px;
	padding-bottom:8px;
}

.page_title{/*the text at the top of the page saying what page you are on*/
}



ul.directory{
	/*page directory style specifically for the lists in the directories
	may make it to include the "On this page part of the directory later"*/
	padding-top:8px;
	padding-bottom:8px;
	border: 1px solid #665544;
	background-color: rgb(240,240,240);
	width:200px;
	min-width:180px;
	
}
.intrapage{/*for links that go to another page within the same page*/
	text-decoration:none;
}

.intrasite{/*for links that go to another page within the same site*/
	color:blue;
}

a.intrasite:visited{
	/*does not work atm*/
	color:blue;
}
	
#green_italian{/*for word italian in verbs homepage*/
	color:green;
}
	
#white_verbs{/*for word verbs in verbs homepage*/
	color: white;
	-webkit-text-stroke-width:1.25px;
	-webkit-text-stroke-color:black;
}
	
#red_homepage{/*for word homepage in verbs homepage*/
	color: red;
}

.ending{/*meta class for verb endings*/
	font-weight: bold;
}

.first{/*class for first conjugation verb endings*/
	color: blue;
}
.second{/*for second conjugation verb endings*/
	color: green;
}
.third{/*for third conjugation verb endings*/
	color: red;
}

